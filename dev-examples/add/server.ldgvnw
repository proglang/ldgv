-- Simple example of Label-Dependent Session Types
-- Interprets addition of two numbers

type SendInt : ! ~ssn = !Int. !Int. Unit

val send2 (c: SendInt) =
    let x = ((send c) 1) in
    let y = ((send x) 42) in
    let z = end y in
    ()

val add2 (c1: dualof SendInt) =
    let <m, c2> = recv c1 in
    let <n, c3> = recv c2 in
    let c4 = end c3 in
    (m + n)


val main : Int
val main =
    let sock = (create 4242) in
    let con = (accept sock (dualof SendInt)) in
    add2 con
